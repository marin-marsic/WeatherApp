<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eu.fiveminutes.android.weatherapp.MainActivity">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"/>

    <EditText
        android:id="@+id/cityQuery"
        android:hint="@string/search_for_the_city"
        android:layout_width="fill_parent"
        android:inputType="text"
        android:nextFocusUp="@id/cityQuery"
        android:nextFocusLeft="@id/cityQuery"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_toLeftOf="@+id/searchButton"
        android:layout_height="@dimen/header_height"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginBottom="@dimen/padding" />

    <ImageView
        android:id="@+id/searchButton"
        android:layout_width="@dimen/search_icon_width"
        android:layout_height="@dimen/search_icon_height"
        android:background="@drawable/search_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginBottom="@dimen/padding" />

    <TextView
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:gravity="center_vertical"
        android:background="@color/header"
        android:textColor="@color/header_font"
        android:textSize="@dimen/header_font_size"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/searchButton"
        android:text="@string/header" />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical" />

</RelativeLayout>
